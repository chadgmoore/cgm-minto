{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

<div class="container single">
    <div class="fixed-logo animated fadeInDown">
        <a href="{{@blog.url}}">
            <img class="lgo" src="{{asset "images/icon.png"}}">
            <img class="arrow" src="{{asset "images/arrow.png"}}">
        </a>
    </div><!-- /.fixed-logo -->

    <div class="rwd-menu">
        <a class="arrow" href="{{@blog.url}}">
            <img src="{{ asset "images/arrow.png"}}">
        </a>

        <a class="lgo" href="{{@blog.url}}">
            <img src="{{asset "images/icon.png"}}">
        </a>
    </div><!-- /.rwd-menu -->

    <div class="row animated bounceInUp">
        <div class="col-lg-12 single-inner">
            <h1>{{title}}</h1>
            <h3>{{author.name}} // {{date}}</h3>
            <hr class="title-hr">
            {{content}}

            <div class="comments">
                <div id="disqus_thread"></div>
                <script type="text/javascript">
                    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
                    var disqus_shortname = 'wherethelightgathers'; // required: replace example with your forum shortname

                    /* * * DON'T EDIT BELOW THIS LINE * * */
                    (function() {
                        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                    })();
                </script>
                <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
            </div><!-- /.comments -->
    </div><!-- /.row -->
</div><!-- /.container -->
        {{! Everything inside the #author tags pulls data from the author }}
        {{#author}}
            <section class="author-info">
                <div class="row">
                    <section class="post-author small-12 columns">
                        {{#if image}}
                            <img src="{{image}}" class="post-author-avatar" alt="{{name}}">
                        {{/if}}
                        {{#if name}}
                            <span class="author-label">Author</span>
                            <h1><a href="{{url}}" class="author-link-name">{{name}}</a></h1>
                        {{/if}}
                        {{#if website}}
                            <p><a href="{{website}}" class="author-website">{{website}}</a></p>
                        {{/if}}
                        {{#if bio}}
                            <p>{{bio}}</p>
                        {{/if}}
                    </section>
                </div>
            </section>
        {{/author}}

{{/post}}
